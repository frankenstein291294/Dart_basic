void main() {
  
  final wolverine = new Heroe(nombre: 'Logan', poder: 'Regeneracion');
  print(wolverine);
  
}

class Heroe {
  String nombre;
  String poder;
  
//   Heroe(String nombre, String poder) {
//     this.nombre = nombre;
//     this.poder = poder;
//   }
  Heroe ({this.nombre, this.poder});
  
  // las funciones dentro de las clases se les llama metodos
  String toString() {
    return '${this.nombre} - ${this.poder}';
  }
}
